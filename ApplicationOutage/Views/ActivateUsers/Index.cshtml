
@model PagedList.IPagedList<ApplicationOutage.ViewModels.UsersViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Registered Users";
}

<h2 class="centerText">Registered Users</h2>
<div class="col-sd-12">
    <div class="col-sm-4">
        @using (Html.BeginForm())
        {
            <p class="pull-right">
                Find by User Email: @Html.TextBox("SearchString")
                <input type="submit" value="Search" class="btn btn-primary btn-sm" />
            </p>
        }
    </div>
</div>
<table class="table table-bordered table-condensed table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            @Html.DisplayName("User Email")
        </th>
        <th>
            @Html.DisplayName("Is Active")
        </th>
        <th>
            @Html.DisplayName("Action")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<hr />
<br />
<div class="pager">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
